#include <iostream>
#include <math.h>

using namespace std;

int isprime(int a) 
{
  if(a == 1 || a == 0)
  return -1;
  
  int i, c = 0;
  
  for(i = 2; i <= sqrt(a); i++)
  {
    if(a % i == 0)
    c++;
  }
  if(c > 0)
  return -1;
  
  else
  return 1;
}

int firstfact(int x)
{
  if(x == 2 || x == 3)
  return x;
  
  int i;
  
  for(i = 2; i <= sqrt(x); i++)
  {
    if(x % i == 0)
    return i;
  }
}

int main()
{
  while(1)
  {
    int n, k, j, p[10], q[10] = {0}, temp;
    cout << "Enter a number greater than 1 to prime factorize, to stop enter 0";
    
    cin >> n;
    
    if(n == 0)
    break;
    
    temp = n;
    
    int index = 0;
    
    while(n >= 2)
    {
      if(isprime(n) == 1)
      k = n;
      
      else
      k = firstfact(n);
      
      for(j = 0; j < index; j++)
      {
        if(k == p[j])
        {
          q[j]++;
          goto a; 
        }
      }

      p[index] = k; 
      q[index]++; 
      index++;
      
      a:
      n = n / k;
    }
    cout << temp << " = ";
    
    for(j = 0; j < index; j++)
    
    cout << "(" << p[j] << " ^ " << q[j] << ")";
    cout << endl;
  }
}





AFTER-PARTY
(a) if n = p is prime, what is σ(n) and τ(n)? 
(b) if n = pq where p and q are both prime, what is σ(n) and τ(n)? 
(c) if n = pm where p is prime and m > 1, what is σ(n) and τ(n)?
